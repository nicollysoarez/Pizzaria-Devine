<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutSabores"
        android:layout_width="231dp"
        android:layout_height="301dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitulo"
        app:layout_constraintVertical_bias="0.174">


        <CheckBox
            android:id="@+id/checkPepperoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pepperoni" />

        <CheckBox
            android:id="@+id/checkPortuguesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portuguesa" />

        <CheckBox
            android:id="@+id/checkFrango"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frango com Catupiry" />

        <CheckBox
            android:id="@+id/checkVegetariana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetariana" />

        <CheckBox
            android:id="@+id/checkQueijos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quatro Queijos" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#f7f"
        android:text="AvanÃ§ar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSabores"
        app:layout_constraintVertical_bias="0.273" />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Escolha os sabores:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
